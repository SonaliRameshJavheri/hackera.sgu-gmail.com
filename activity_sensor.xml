<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity">

    <TextView
        android:id="@+id/xTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="X Value"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/yTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xTextView"
        android:layout_alignStart="@+id/xTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Y Value"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/zTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yTextView"
        android:layout_alignStart="@+id/yTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Y Value"
        android:textSize="24sp"/>


</RelativeLayout>

